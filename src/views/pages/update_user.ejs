<%- include('../layout/_header') %>


	<section class="vh-100 bg-image"
		style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
		<div class="d-flex align-items-center h-100 gradient-custom-3">
			<div class="container h-100 my-2">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-12 col-md-9 col-lg-7 col-xl-6">
						<% if (alert) { %>
							<div class="alert alert-<%= alert.type %> alert-dismissible fade show" role="alert">
								<strong>
									<%= alert.message %>
								</strong>
								<button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<% } %>
								<div class="card" style="border-radius: 15px;">
									<div class="card-body p-5">
										<h2 class="text-uppercase text-center mb-5">Update User</h2>

										<form action="/update/<%= user.email %>" method="post">

											<div class="form-outline mb-4">
												<input name="name" type="text" id="name"
													class="form-control form-control-lg" value="<%= user.name %>" />
												<label class="form-label" for="name">Enter your name</label>
											</div>


											<div class="d-flex justify-content-center">
												<button type="submit"
													class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Update</button>
											</div>


										</form>

									</div>
								</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<%- include('../layout/_footer') %>